    tools:context=".AndroidAlarmActivity">


    <TextView
        android:id="@+id/backgroundLabel"
        android:layout_width="117dp"
        android:layout_height="35dp"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="43dp"
        android:text="@string/background_label"
        android:textSize="21sp"
        app:layout_constraintStart_toEndOf="@+id/soundComboBox"
        app:layout_constraintTop_toBottomOf="@+id/currentTime" />

    <TextView
        android:id="@+id/soundLabel"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="43dp"
        android:text="@string/sound_label"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentTime" />

    <Button
