        android:layout_width="390dp"
        android:layout_height="120dp"
        android:layout_marginBottom="89dp"
        android:layout_marginEnd="111dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="111dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="49dp"
        android:text="@string/off_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hourEditText3" />

    <Spinner
        android:id="@+id/soundComboBox"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="43dp"
        app:layout_constraintStart_toEndOf="@+id/soundLabel"
        app:layout_constraintTop_toBottomOf="@+id/currentTime" />

    <Spinner
        android:id="@+id/backgroundComboBox"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="43dp"
        app:layout_constraintStart_toEndOf="@+id/backgroundLabel"
        app:layout_constraintTop_toBottomOf="@+id/currentTime" />

    <EditText
        android:id="@+id/hourEditText1"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="46dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        android:text="@string/hour_edit_text1"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/soundLabel" />

    <EditText
        android:id="@+id/minuteEditText1"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="46dp"
