        android:inputType="number"
        android:maxLength="2"
        android:text="@string/minute_edit_text1"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/separatorLabel1"
        app:layout_constraintTop_toBottomOf="@+id/backgroundLabel" />

    <EditText
        android:id="@+id/hourEditText2"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        android:text="@string/hour_edit_text2"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hourEditText1" />

    <EditText
        android:id="@+id/hourEditText3"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="59dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        android:text="@string/hour_edit_text3"
        android:textSize="60sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hourEditText2" />

    <EditText
        android:id="@+id/minuteEditText2"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="number"
        android:maxLength="2"
        android:text="@string/minute_edit_text2"
        android:textSize="60sp"
        app:layout_constraintStart_toEndOf="@+id/separatorLabel2"
        app:layout_constraintTop_toBottomOf="@+id/minuteEditText1" />

    <EditText
        android:id="@+id/minuteEditText3"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:layout_marginLeft="23dp"
